<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.CalendarFragment">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_main_calendar"
        style="@style/custom_card_fill_space"
        android:padding="4dp"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/colorPrimary"
        app:mcv_arrowColor="@color/colorPrimary">
    </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

    <LinearLayout style="@style/custom_card_96dp">

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/iv_selected_acara"
            android:transitionName="@string/tn_selected_acara"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lokasi_name"
                android:text="Institut Teknologi Bandung"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_lokasi_owner"
                android:text="Prof. Kadarsah Suryadi"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_fasilitas_address"
                android:text="Jalan Ganesha no 10, Bandung, Jawa Barat"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>