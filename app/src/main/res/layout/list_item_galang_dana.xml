<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_galang_data_list_item"
    style="@style/custom_card_96dp">

    <ImageView
        android:src="@drawable/itb"
        android:layout_margin="8dp"
        android:id="@+id/iv_selected_galang_dana"
        android:transitionName="@string/tn_selected_galang_dana"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_galang_dana_title"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_galang_dana_owner"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_galang_dana_amount"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/pb_galang_dana_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:max="100"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>

    </LinearLayout>


</LinearLayout>