<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_galang_data_list_item"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="4dp"
    android:elevation="4dp"
    android:clipToPadding="false"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/iv_selected_acara"
        android:transitionName="@string/tn_selected_acara"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_fasilitas_name"
            android:text="Institut Teknologi Bandung"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_fasilitas_owner"
            android:text="Prof. Kadarsah Suryadi"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_fasilitas_address"
            android:text="Jalan Ganesha no 10, Bandung, Jawa Barat"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>