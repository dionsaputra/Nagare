<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailAcaraActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/iv_selected_acara"
            android:transitionName="@string/tn_selected_acara"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/scrim"/>

        <TextView
            android:id="@+id/tv_acara_name"
            android:text="Institut Teknologi Bandung"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:padding="4dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_marginBottom="4dp"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_acara_owner"
            android:text="Prof. Kadarsah Suryadi"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_acara_address"
            android:text="Jalan Ganesha no 10, Bandung, Jawa Barat"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>